<%- include("partials/header") %>

<div>
    <h1>Edit Your Profile <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></h1>
    <div class="row">
        
        <form method="post" action="/profile/<%=currentUser._id%>?_method=PUT">
            <input type="text" name="username" placeholder="username" value="<%=currentUser.username%>">
            <input type="email" name="email" placeholder="email" value="<%=currentUser.email%>">
            <input type="text" name="bio" placeholder="something about you...">
            <div>
                <h4>Educational details</h4>
                <input type="text" name="institute" placeholder="Institute Name">
                <input type="text" name="course" placeholder="Course">
            </div>
            <div>
                <h4>Occupational details</h4>
                <input type="text" name="company" placeholder="Company where you work..">
                <input type="text" name="desig" placeholder="Your post in company">
            </div>
            <div>
                <h4>Handles</h4>
                <input type="text" name="twitter" placeholder="Twitter handle">
                <input type="text" name="github" placeholder="GitHub handle">
                <input type="text" name="linkedin" placeholder="Linkedin handle">
            </div>   
            <input type="submit" value="Save">
            <button><a href="/discuss">Cancel</a></button>
        </form>
    </div>
    

</div>








<%- include("partials/footer") %>